# ---------------- ADF Support ---------------- #
def text_to_adf(text: str) -> dict:
    """–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è —Ç–µ–∫—Å—Ç–∞ –≤ Atlassian Document Format"""
    if not text:
        return {
            "type": "doc",
            "version": 1,
            "content": []
        }
    
    # –†–∞–∑–±–∏–≤–∞–µ–º —Ç–µ–∫—Å—Ç –Ω–∞ –ø–∞—Ä–∞–≥—Ä–∞—Ñ—ã
    paragraphs = text.split('\n\n')
    content = []
    
    for paragraph in paragraphs:
        if paragraph.strip():
            # –û–±—Ä–∞–±–æ—Ç–∫–∞ —Å–ø–∏—Å–∫–æ–≤
            lines = paragraph.split('\n')
            list_items = []
            regular_text = []
            
            for line in lines:
                line = line.strip()
                if line.startswith(('‚Ä¢', '-', '*', '- ')):
                    # –ï—Å–ª–∏ —É –Ω–∞—Å –µ—Å—Ç—å –æ–±—ã—á–Ω—ã–π —Ç–µ–∫—Å—Ç, –¥–æ–±–∞–≤–ª—è–µ–º –µ–≥–æ –∫–∞–∫ –ø–∞—Ä–∞–≥—Ä–∞—Ñ
                    if regular_text:
                        content.append({
                            "type": "paragraph",
                            "content": [
                                {
                                    "type": "text",
                                    "text": '\n'.join(regular_text)
                                }
                            ]
                        })
                        regular_text = []
                    
                    # –î–æ–±–∞–≤–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç —Å–ø–∏—Å–∫–∞
                    item_text = line[1:].strip() if line.startswith(('‚Ä¢', '-', '*')) else line[2:].strip()
                    if item_text:
                        list_items.append({
                            "type": "listItem",
                            "content": [
                                {
                                    "type": "paragraph",
                                    "content": [
                                        {
                                            "type": "text",
                                            "text": item_text
                                        }
                                    ]
                                }
                            ]
                        })
                else:
                    # –î–æ–±–∞–≤–ª—è–µ–º –∫ –æ–±—ã—á–Ω–æ–º—É —Ç–µ–∫—Å—Ç—É
                    if list_items:
                        # –°–Ω–∞—á–∞–ª–∞ –¥–æ–±–∞–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫
                        content.append({
                            "type": "bulletList",
                            "content": list_items
                        })
                        list_items = []
                    
                    regular_text.append(line)
            
            # –î–æ–±–∞–≤–ª—è–µ–º –æ—Å—Ç–∞–≤—à–∏–µ—Å—è —ç–ª–µ–º–µ–Ω—Ç—ã
            if list_items:
                content.append({
                    "type": "bulletList",
                    "content": list_items
                })
            elif regular_text:
                content.append({
                    "type": "paragraph",
                    "content": [
                        {
                            "type": "text",
                            "text": '\n'.join(regular_text)
                        }
                    ]
                })
    
    return {
        "type": "doc",
        "version": 1,
        "content": content
    }

